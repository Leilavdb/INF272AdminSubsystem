
@{
    ViewBag.Title = "School";
}
@*Form to search Schools*@

<div class="form-inline" style="padding-bottom:25px">
    @using (Html.BeginForm("School", "Admin", FormMethod.Post))
    {
        @Html.TextBox("SearchCriteria", null, new { @class = "form_control", @type = "text" })
        <button type="submit" class="btn btn-primary">Search</button>
    }

</div>

@*Button to add School*@
<div style="padding-bottom:25px">
    <a href="@Url.Action("AddSchool", "Admin")" class="btn btn-primary">Add School</a>
</div>

