@*Table to display the schools in the school Table*@
<h2>School</h2>
<table class="table">
    <tr>
        <th>School ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (INF272AdminSubsystem.Models.School s in ViewBag.Schools)
    {
        <tr>
            <td> @s.School_ID </td>
            <td> @s.School_Name</td>
            <td> @s.School_Address</td>
            <td> @s.School_Email</td>
            <td> @s.School_Phone</td>
            <td> <a href="@Url.Action("DeleteSchool", "Admin", new {id = s.School_ID })" class="btn btn-primary">Delete</a></td>
            <td> <a href="@Url.Action("UpdateSchool", "Admin",  new {id = s.School_ID })" class="btn btn-primary">Update</a></td>
        </tr>
    }
   

</table>

